<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>Index</title>
    <style media="screen">
    body {
            background: skyblue;
            color: #fff;
            font-family: verdana;
            padding: 30px;
        }

        h1 {
            font-size: 48px;
            text-transform: uppercase;
            letter-spacing: 2px;
            text-align: center;
        }

        h2 {
            font-size: 30px;
            text-transform: uppercase;
            letter-spacing: 2px;
            text-align: center;
        }

        p {
          font-size 16px;
          text-align: center;
        }

        ul {
          list-style: none;
          position: relative;
        }

        li {
          font-size 16px;
          text-align: center;
        }
    }
    </style>
</head>

<body>
    <% include partials/nav.ejs %>
    <h1>Welcome to the profile of <%= person %></h1>
    <p><strong>Age:</strong> <%= data.age %></p>
    <p><strong>Job:</strong> <%= data.job %></p>
    <h2>Hobbies</h2>
    <ul>
      <% data.hobbies.forEach( function (item) { %>
        <li><%= item %></li>
      <% }); %>
    </ul>
</body>

</html>
